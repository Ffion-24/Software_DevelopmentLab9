#Clue 1

def greetUser():
    welcome= "Welcome to the Python Treasure Hunt"
    return welcome

print(greetUser())

#Clue 2

def calculateSum():
    sum = 25+15
    return sum

print(calculateSum())

#Clue 3

def createUserProfile(userName , userAge = 25, userCountry = "Unknown"):
    return{
        "Name": userName,
        "Age" : userAge,
        "Country" : userCountry
    }
    
profile1 = createUserProfile("Ali")
print(profile1)

#Clue 4
def calculateTotalSum(*args): 
    return sum(args)

total = calculateTotalSum(12, 4, 23)

print(total)

#Clue 5
square = lambda x:x*x
result = square(4)
print(result)

#Clue 6
def calculateFactorial(n):
    if n == 0 or n == 1:
        return 1
    return n*calculateFactorial(n-1)

result = calculateFactorial(5)
print(result)

#Clue 7
def numberSequenceGenerator(limit):
    for i in range(limit):
        yield i

for num in numberSequenceGenerator(5):
    print(num)